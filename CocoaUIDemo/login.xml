<div style="margin: 15;">
	<img id="logo" src="user.png" style="float: center; clear: both; width: 64; height: 64; margin: 10 0;" />
	
	<div style="margin: 15 0; border-bottom: 1 solid #eee;">
		<img src="ic_name.png" style="width: 18; height: 24; margin: 8 8 0 0;" />
		<input id="name" type="text" placeholder="Username" style="width: 100%; height: 40;" />
	</div>
	
	<div style="margin: 15 0; border-bottom: 1 solid #eee;">
		<img src="ic_pass.png" style="width: 18; height: 24; margin: 8 8 0 0;" />
		<input id="password" type="password" placeholder="Password" style="width: 100%; height: 40;" />
	</div>
	
	<div id="captcha_div" style="display: none;">
		<img id="captcha_img" style="float: right; margin: 10 0 0 4; width: 120; height: 50; background: #eee;" />
		<div style="margin: 15 0; border-bottom: 1 solid #eee;">
			<img src="ic_captcha.png" style="width: 18; height: 24; margin: 8 8 0 0;" />
			<input id="captcha" type="text" placeholder="Captcha" style="width: 100%; height: 40;" />
		</div>
	</div>
	
	<button id="submit" style="clear: both; width: 100%; height: 40; font-size: large; margin: 15 0 0 0; color: #fff; background: #6cf; border-radius: 5;">Login</button>
</div>
